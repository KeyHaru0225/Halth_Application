<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    　　 // 「日付　2021/6/30 WED」のようにする

    <TextView
        android:id="@+id/calendar_date1"
        android:layout_width="159dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="日付"
        android:textSize="40dp"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="-5dp"
        tools:layout_editor_absoluteY="7dp" />

    <Button
        android:id="@+id/calendar_button1"
        android:layout_width="68dp"
        android:layout_height="70dp"
        android:text="＜"
        android:textColor="#808080"
        android:textSize="20dp"
        app:backgroundTint="#FFFFFF"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="-5dp" />

    <Button
        android:id="@+id/calendar_button2"
        android:layout_width="68dp"
        android:layout_height="70dp"
        android:text="＞"
        android:textColor="#808080"
        android:textSize="20dp"
        app:backgroundTint="#FFFFFF"
        tools:layout_editor_absoluteX="246dp"
        tools:layout_editor_absoluteY="-5dp" />

    <TextView
        android:id="@+id/calendar_month"
        android:layout_width="87dp"
        android:layout_height="70dp"
        android:text="今月"
        android:textSize="30dp"
        android:gravity="center"
        tools:layout_editor_absoluteX="314dp"
        tools:layout_editor_absoluteY="-5dp" />

    //　該当月のカレンダー(日曜始まり、土曜終わり)が表示されるようにコーディングする
    //　各マスにマークや体重が見えるようにする
    <TextView
        android:id="@+id/calendar"
        android:layout_width="406dp"
        android:layout_height="415dp"
        android:text=""
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="102dp" />

    //　Textにその日の日付・曜日が入るようにコーディングする
    <TextView
        android:id="@+id/calendar_date2"
        android:layout_width="134dp"
        android:layout_height="48dp"
        android:text=""
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="517dp" />

    // Textにその日の体重が入るようにコーディングする
    <TextView
        android:id="@+id/calendar_weight"
        android:layout_width="137dp"
        android:layout_height="64dp"
        android:gravity="center"
        android:text="㎏"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="565dp" />

    // BMIの隣に数値が入るようにコーディングする
    <TextView
        android:id="@+id/calendar_bmi"
        android:layout_width="137dp"
        android:layout_height="64dp"
        android:gravity="center"
        android:text="BMI"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="223dp"
        tools:layout_editor_absoluteY="565dp" />

    //　アイコンが5つ入るようにする

</androidx.constraintlayout.widget.ConstraintLayout>