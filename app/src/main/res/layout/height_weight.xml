<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/first_height_weight"
        android:layout_width="417dp"
        android:layout_height="56dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:textSize="20dp"
        android:gravity="center"
        android:layoutType="textPersonHeight"
        android:text="現在の身長・体重を入力してください"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/height"
        android:layout_width="345dp"
        android:layout_height="52dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:text="身長"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/height_unit"
        android:layout_width="64dp"
        android:layout_height="53dp"
        android:ems="10"
        android:gravity="center"
        android:text="㎝"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/height"
        app:layout_constraintTop_toTopOf="@+id/height" />

    <EditText
        android:id="@+id/weight"
        android:layout_width="345dp"
        android:layout_height="52dp"
        android:layout_marginTop="244dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:text="体重"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weight_unit"
        android:layout_width="68dp"
        android:layout_height="57dp"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:gravity="center"
        android:text="㎏"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/height_unit" />

    <TextView
        android:id="@+id/text_bmi"
        android:layout_width="272dp"
        android:layout_height="125dp"
        android:text="mText_bmi"　// BMI値が出るように修正する　7/13
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="408dp" />

    <Button
        android:id="@+id/height_weight_button"
        android:layout_width="170dp"
        android:layout_height="52dp"
        android:text="次へ"
        android:onClick="height_weight_button_onClick"
        app:backgroundTint="#ffc0cb"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="630dp" />

    <TextView
        android:id="@+id/bmi_result"
        android:layout_width="83dp"
        android:layout_height="29dp"
        android:text="BMI測定結果"
        app:layout_constraintBottom_toTopOf="@+id/text_bmi"
        tools:layout_editor_absoluteX="62dp" />




</androidx.constraintlayout.widget.ConstraintLayout>